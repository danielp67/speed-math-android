<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SpeedMath" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- LIGHT MODE COLORS -->
        <!-- background -->
        <item name="android:colorBackground">@color/grey_light</item>
        <item name="colorBackground">@color/grey_light</item>

        <!-- primary text -->
        <item name="android:textColor">@color/grey_dark_1</item>
        <item name="textPrimary">@color/grey_dark_1</item>
        <item name="tabIconTint">@color/white</item>
        <item name="actionBarTheme">@style/Theme.ActionBar</item>

        <item name="android:colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/grey_dark_1</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="playButtonColor">@color/blue_primary</item>
        <item name="colorAccent">@color/gold_accent</item>
        <item name="itemTextAppearanceActive">@color/gold_accent</item>

        <!-- NAV + STATUS BAR -->
        <item name="android:navigationBarColor">@color/blue_primary</item>
        <item name="android:statusBarColor">@color/blue_primary</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <!-- FONT -->
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/gold_accent</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gold_accent</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>
</resources>