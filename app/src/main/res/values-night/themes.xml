<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
        <style name="Theme.SpeedMath" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

            <!-- LIGHT MODE COLORS -->
            <!-- background -->
            <item name="android:colorBackground">@color/grey_dark_3</item>
            <item name="colorBackground">@color/grey_dark_3</item>

            <!-- primary text -->
            <item name="android:textColor">@color/grey_light</item>
            <item name="textPrimary">@color/grey_light</item>
            <item name="tabIconTint">@color/blue_primary_light</item>
            <item name="actionBarTheme">@style/Theme.ActionBar</item>

            <item name="android:colorPrimary">@color/grey_dark_1</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="colorPrimaryDark">@color/blue_primary_dark</item>
            <item name="colorAccent">@color/gold_accent</item>
            <item name="itemTextAppearanceActive">@color/blue_primary_light</item>

            <!-- NAV + STATUS BAR -->
            <item name="android:navigationBarColor">@color/black</item>
            <item name="android:statusBarColor">@color/black</item>
            <item name="colorPrimary">@color/black</item>
            <!-- FONT -->
            <item name="android:fontFamily">@font/inter_regular</item>
        </style>

        <style name="Theme.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
            <item name="android:textColorPrimary">@color/blue_primary_light</item>
            <item name="titleTextStyle">@style/ActionBar.TitleText</item>
        </style>

        <style name="ActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
            <item name="android:textColor">@color/blue_primary_light</item>
        </style>
</resources>
