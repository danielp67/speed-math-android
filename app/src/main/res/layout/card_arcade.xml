<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/accent_violet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- ===== CONTENU GAUCHE ===== -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- ICON -->
            <TextView
                android:id="@+id/iconCard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/circle_bg"
                android:textColor="@color/blue_primary"/>

            <!-- TEXT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimary"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/descriptionCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ===== SETTINGS (DEFAULT) ===== -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/gear_solid_full"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/grey_light"/>

        <!-- ===== ONLINE INFO (ONLINE ONLY) ===== -->
        <LinearLayout
            android:id="@+id/layoutOnlineInfo"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtPlayersOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ 128"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/textPrimary"/>

            <TextView
                android:id="@+id/txtGamesLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 / 10"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/textPrimary"/>
        </LinearLayout>

        <!-- ===== PLAY ===== -->
        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/play_solid_full"
            android:contentDescription="Play"
            android:background="?attr/playButtonColor"
            app:tint="@android:color/white"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
