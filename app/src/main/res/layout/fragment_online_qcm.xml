<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="128dp"
    android:gravity="center_horizontal">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!-- Question -->
    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:text="@string/question"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>
        <TextView
            android:id="@+id/textCombo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:textColor="@color/gold_accent"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:gravity="center"/>
    <!-- GRID 2x2 -->
    <GridLayout
        android:id="@+id/gridAnswers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="3"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <include
            android:id="@+id/cardOption1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
        <include
            android:id="@+id/cardOption2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
        <include
            android:id="@+id/cardOption3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
        <include
            android:id="@+id/cardOption4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
    </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/localOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#7F000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:text=""/>

        <Button
            android:id="@+id/btnReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/play_again"
            android:textColor="@color/gold_accent"
            android:backgroundTint="@color/blue_primary"
            android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>


    <LinearLayout
        android:id="@+id/opponentBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/background_opponent_bar"
        android:padding="12dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- ===== LIGNE SCORE ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgMyAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_avatar"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/textMyPseudo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="P1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="start" />

                <!-- Score -->
                <TextView
                    android:id="@+id/textMyScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingHorizontal="12dp" />
                <TextView
                    android:id="@+id/textScoreCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingHorizontal="0dp" />
                <TextView
                    android:id="@+id/textOpponentScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingHorizontal="12dp" />
                <!-- Opponent -->
                <TextView
                    android:id="@+id/textOpponentName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="P2"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="end" />
                <ImageView
                    android:id="@+id/imgOpponentAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_avatar"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <!-- ===== LIGNE POINTS / RANK ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <!-- Moi -->
                <TextView
                    android:id="@+id/textMyStats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 pts  (#999)"
                    android:textSize="13sp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/textTimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/timer"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:gravity="center" />
                <!-- Opponent -->
                <TextView
                    android:id="@+id/textOpponentStats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 pts  (#999)"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
