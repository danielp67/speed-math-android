<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="128dp"
    android:gravity="center_horizontal">

    <!-- Question -->
    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:text="@string/question"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- GRID 2x2 -->
    <GridLayout
        android:id="@+id/gridAnswers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="3"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <include
            android:id="@+id/cardOption1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
        <include
            android:id="@+id/cardOption2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
        <include
            android:id="@+id/cardOption3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
        <include
            android:id="@+id/cardOption4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/card_option"/>
    </GridLayout>

    <!-- Top bar: Timer / Result / Combo / Score -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/timer"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/result"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:textColor="@color/gold_accent"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textScoreRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="@string/score"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Adversaire / score -->
    <!-- Adversaire / score -->
    <LinearLayout
        android:id="@+id/opponentBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/background_opponent_bar"
        android:padding="12dp"
        android:elevation="4dp">

        <!-- Avatar de l'adversaire -->
        <ImageView
            android:id="@+id/imgOpponentAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_opponent_avatar"
            android:layout_marginEnd="8dp"/>

        <!-- Nom de l'adversaire -->
        <TextView
            android:id="@+id/textOpponentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Adversaire"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"/>

        <!-- Score de l'adversaire -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/background_score_badge"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textOpponentScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gold_accent"
                android:gravity="center"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_solid_full"
                app:tint="@color/gold_accent"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/btnQuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Quit"
            android:backgroundTint="@color/blue_primary"
            android:textColor="@color/white"
            android:textStyle="bold" />

</LinearLayout>
