<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:useDefaultMargins="true"
    android:columnCount="3"
    android:rowCount="5">

    <Button
        android:id="@+id/btn1"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn2"
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn3"
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn4"
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn5"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn6"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn7"
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn8"
        android:text="8"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn9"
        android:text="9"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:text="X"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn0"
        android:text="0"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn_correct"
        android:text="C"
        android:layout_width="100dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/btn_validate"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_columnSpan="3"
        android:text="OK" />

</GridLayout>
