    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingTop="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_64">

        <include layout="@layout/card_button" android:id="@+id/cardAdd"/>
        <include layout="@layout/card_button" android:id="@+id/cardSub"/>
        <include layout="@layout/card_button" android:id="@+id/cardMul"/>
        <include layout="@layout/card_button" android:id="@+id/cardDiv"/>
        <include layout="@layout/card_button" android:id="@+id/cardAll"/>
        <include layout="@layout/card_button" android:id="@+id/cardQCM"/>
        <include layout="@layout/card_button" android:id="@+id/cardDual"/>
        <include layout="@layout/card_button" android:id="@+id/test1"/>
        <include layout="@layout/card_button" android:id="@+id/test2"/>
        <include layout="@layout/card_button" android:id="@+id/test3"/>
        <include layout="@layout/card_button" android:id="@+id/test4"/>

    </LinearLayout>
</ScrollView>
