<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État sélectionné -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/blue_primary" /> <!-- Couleur quand sélectionné -->
            <stroke android:width="2dp" android:color="@color/blue_primary" />
        </shape>
    </item>
    <!-- État par défaut -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/white" /> <!-- Fond blanc par défaut -->
            <stroke android:width="2dp" android:color="@color/grey_light" /> <!-- Bordure grise -->
        </shape>
    </item>
</selector>

